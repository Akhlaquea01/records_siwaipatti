{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "üöÄ Dev Server (tsx)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--env-file=.env",
                "--import",
                "tsx"
            ],
            "program": "${workspaceFolder}/src/server.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "üèóÔ∏è Production (built dist/)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--env-file=.env"
            ],
            "program": "${workspaceFolder}/dist/server.js",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "console": "integratedTerminal"
        }
    ]
}
